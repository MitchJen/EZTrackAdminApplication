@model VendorPool
@{
    ViewBag.Title = "AddNewVendorAndVendorPool";
}

<div>
    <div class="container">
        <div class="row justify-content-sm-start">
            <div class="col col-4" style="padding-left: 0">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action" style="padding: 3px 10px; background-color: #cccccc" href="@Url.Action("Index", "Home" )">Admin Home:</a>
                    <a class="list-group-item list-group-item-action" style="padding: 3px 10px; background-color: #cccccc" href="@Url.Action("ReOpenSRO", "Home" )">Re-Open RSO</a>
                    <a class="list-group-item list-group-item-action" style="padding: 3px 10px; background-color: #cccccc" href="@Url.Action("AddInspector", "Home" )">Add Inspector</a>
                    <a class="list-group-item list-group-item-action" style="padding: 3px 10px; background-color: #cccccc" href="@Url.Action("AddNewVendor", "Home" )">Add New Vendor</a>
                    <a class="list-group-item list-group-item-action active" style="padding: 3px 10px" href="@Url.Action("AddVendorPool", "Home" )">Add New Vendor Pool</a>
                    <a class="list-group-item list-group-item-action" style="padding: 3px 10px; background-color: #cccccc" href="@Url.Action("DealerList", "DynamoDB")">Dealer List</a>
                </div>
            </div>
            <div class="col col-sm">
                <h2>Add Vendor Pool</h2>
                @if (TempData["AlertMessage"] != null)
                {
                <div class="alert alert-success" style="margin-bottom:0">
                    <strong>Success!</strong> @TempData["AlertMessage"]
                </div>
                }
                @using (Html.BeginForm())
                {
                <br />
                <form action="AddInspector" method="post">
                    <table>
                        @if (!ViewData.ModelState.IsValid)
                        {
                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(i => i.description, "", new { @class = "text-danger" })</td>
                        </tr>
                        }
                        <tr>
                            <td style="padding-bottom: 15px">Vendor Description: </td>
                            <td style="padding-bottom: 15px; padding-left: 15px">@Html.TextBoxFor(i => i.description, new { @class = "form-control", @maxlength = "50", required = "required", style = "border-color:darkgray" })</td>
                        </tr>
                        @if (!ViewData.ModelState.IsValid)
                        {
                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(i => i.currencyId, "", new { @class = "text-danger" })</td>
                        </tr>

                        }
                        <tr>
                            <td style="padding-bottom: 15px">Currency Id: </td>
                            <td style="padding-bottom: 15px; padding-left: 15px">@Html.DropDownListFor(i => i.currencyId, new SelectList(@Model.currencyId), "Select Currency", new { @class = "form-control", required = "required", style = "border-color:darkgray" })</td>
                        </tr>
                        @if (!ViewData.ModelState.IsValid)
                        {
                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(i => i.countryId, "", new { @class = "text-danger" })</td>
                        </tr>

                        }
                        <tr>
                            <td style="padding-bottom: 15px">Country Id: </td>
                            <td style="padding-bottom: 15px; padding-left: 15px">@Html.DropDownListFor(i => i.countryId, new SelectList(@Model.countryId), "Select Country", new { @class = "form-control", required = "required", style = "border-color:darkgray" })</td>
                        </tr>
                        @if (!ViewData.ModelState.IsValid)
                        {
                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(i => i.eligibilityExpirationDay, "", new { @class = "text-danger" })</td>
                        </tr>

                        }
                        <tr>
                            <td style="padding-bottom: 15px">Eligibility Expiration Day: </td>
                            <td style="padding-bottom: 15px; padding-left: 15px">@Html.TextBoxFor(i => i.eligibilityExpirationDay, new { @class = "form-control", @maxvalue = int.MaxValue, required = "required", style = "border-color:darkgray" })</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td colspan="2" style="padding-bottom: 15px; float: right"><input type="submit" class="btn btn-info" value="Add Vendor Pool" /></td>
                        </tr>
                    </table>
                </form>
                }
            </div>
        </div>
    </div>
</div>
