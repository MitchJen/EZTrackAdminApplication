<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EZTrac Admin Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
    
</head>

<body style="background-color: #aaaaaa">
    <header style="background-color: #dddddd; padding-top: 25px">
        <div class="container-fluid center-block" style="max-width: 768px">
            <div>
                <div class="col-12">
                    <a href="https://paccar.sharepoint.com/sites/PPD" style="color: black; text-decoration: none">
                        <h1 style="font-weight: bold; padding-left: 25px">EZTrac</h1>
                    </a>
                </div>
            </div>
            <div>
                <div class="container-fluid">
                    <ul style="list-style-type: none; margin:0; padding:0; overflow:hidden">
                        <li style="float: left"><a href="#" style="color: #1c3345; font-weight: bold; padding: 14px 16px; text-decoration: none ">CORE RETURN</a></li>
                        <li style="float: left"><a href="#" style="color: #1c3345; font-weight: bold; padding: 14px 16px; text-decoration: none">INSPECTION</a></li>
                        <li style="float: left"><a href="#" style="color: #1c3345; font-weight: bold; padding: 14px 16px; text-decoration: none">EZTRAC MANAGEMENT</a></li>
                        <li style="float: left"><a href="#" style="color: #1c3345; font-weight: bold; padding: 14px 16px; text-decoration: none">REPORTS</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div style="background-color: #37516a; height: 35px"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="d-flex justify-content-center" style="background-color: #aaaaaa">
                <div style="flex-basis: 768px; background-color: #f5f5f5">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EZTrac Admin Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
